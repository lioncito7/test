package com.simulator.service;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;

import org.springframework.stereotype.Service;

@Service
public class SimulatorService {

	
	public void processSimulation(String fileName,int amount) {
		
		System.out.println(getBestInterest(fileName,amount));
		
		double interest = getBestInterest(fileName,amount);
		
		double monthly = 0;
		amount = 13000;
		interest = 0.0165;
		monthly = amount* (Math.pow(interest +1, 36)*interest)/(Math.pow(interest +1, 36)-1);
		System.out.println(monthly);
	}
	
	public double getBestInterest(String fileName,int amount) {
		
		BufferedReader br = null;
		double min = -1;
		try {
			 String line;
			
			 br = new BufferedReader(new FileReader(fileName));
			 String[] borrower;
			 int counter = 0;

	         while ((line = br.readLine()) != null) {
	        	 ++counter;
	             borrower = line.split(",");

	             if(counter == 1 ) {
	            	 continue;
	             }
	             if(new Integer(borrower[2]).intValue() >= amount) {
	            	 if(counter == 2 ) {
	            		 min = new Double(borrower[1]).doubleValue();
	            	 }else if(counter >2) {
	            		 if(new Double(borrower[1]).doubleValue() < min) {
	            			 min = new Double(borrower[1]).doubleValue();
	            		 }
	            	 }
	             }
	         }	
	         
	         
	         
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();
        } finally {
            if (br != null) {
                try {
                    br.close();
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }
        }
		
        return min;
	}	
}
